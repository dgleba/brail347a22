
<row class="row is-table-row" >

  <div class="col-sm-1 ">
    <%= link_to 'Create', new_offer_path , class: "btn btn-success"%>
  </div>

  <div class="col-sm-2 ">
    <h4>Listing Offers</h4>
  </div>

  <div class="col-sm-3">
    <%= search_form_for @q, class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :name_cont, class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn btn-primary">Search <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4 ">
    <%= paginate @offers %>
  </div>
  
  <div class="col-sm-2 ">
    <%= page_entries_info @offers, :entry_name => 'item' %>
  </div>
  
</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="1"></th>
            <th>Name</th>
      <th>Fdate</th>
      <th>Active status</th>
      <th>Sort</th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td>
          <div class="btn-group">
          <%= link_to 'Show', offer, class: "btn btn-info", :style=>'color:#FFFFFF;' %>
          <%= link_to 'Edit', edit_offer_path(offer), class: "btn btn-primary", :style=>'color:#FFFFFF;' %>
          <% #commentedout  = link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", :style=>'color:#FFFFFF;' %>
          </div>
        </td>
        
        <td><%= offer.name %></td>
        <td><%= offer.fdate %></td>
        <td><%= offer.active_status %></td>
        <td><%= offer.sort %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
